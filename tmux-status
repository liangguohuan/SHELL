#!/bin/bash
# Breif: 
#   write complicated code for displaying tmux status often get erros,
#   so create a small file to be convenient to be calling.
# 

########################################################################
#=> 引用常用函数库
########################################################################
source "/home/hanson/CodeHub/SHELL/libs/bootstrap.sh"

ut=$(uptime | grep -o -e '[0-9]\+:[0-9]\+,' | tr -d ',' | sed 's/$//')
ut="⌛ ${ut}"

lock=$(xset -q | grep Caps | awk '{print $4}')
[[ $lock == "on" ]] && lock="on" || lock="off"
lock="⌨  ${lock}"

case "$1" in
    winsign)
        echo "≡ "
        ;;
    uptime)
        echo $ut
        ;;
    capslock)
        echo $lock
        ;;
    mixed)
        echo "${lock} ${ut}"
        ;;
    *) echo "NONE"
esac
